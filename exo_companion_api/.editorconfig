# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
charset = utf-8

# Tab indentation (2 spaces)
[*.md]
indent_style = space
indent_size = 2

# JavaScript files
[*.js]
indent_style = space
indent_size = 2

# TypeScript files
[*.ts]
indent_style = space
indent_size = 2

# Java files
[*.java]
indent_style = space
indent_size = 4

# YAML files
[*.yaml, *.yml]
indent_style = space
indent_size = 2

# XML files
[*.xml]
indent_style = space
indent_size = 2